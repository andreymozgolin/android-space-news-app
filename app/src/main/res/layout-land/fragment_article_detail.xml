<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">


        <ImageView
            android:id="@+id/article_detail_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/article_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.SpaceNews.ArticleTitle"
                tools:text="Space news title" />

            <TextView
                android:id="@+id/article_detail_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:theme="@style/Theme.SpaceNews.ArticleSummary"
                tools:text="Space news summary" />

            <TextView
                android:id="@+id/article_detail_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:theme="@style/Theme.SpaceNews.ArticleSource"
                tools:ignore="TextContrastCheck"
                tools:text="Source: Site" />

            <TextView
                android:id="@+id/article_detail_published"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:theme="@style/Theme.SpaceNews.ArticleSource"
                tools:text="Published At" />

            <Button
                android:id="@+id/article_detail_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>